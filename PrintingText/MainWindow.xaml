<Window x:Class="PrintingText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrintingText"
        xmlns:viewmodel="clr-namespace:PrintingText.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="743.5" Width="1502">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="25" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Margin" Value="25 5 25 5" />
        </Style>
    </Window.Resources>
    <Grid x:Name="Window" Background="Gray" Margin="0,0,-2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas DataContext="{Binding Canvas}" x:Name="place" HorizontalAlignment="Left" Height="672" Margin="358,22,0,0" VerticalAlignment="Top" Width="428" Background="#FFD39595">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Canvas.Left="125" Canvas.Top="166"/>
            <Image Height="100" Canvas.Left="58" Canvas.Top="209" Width="100" OpacityMask="#FFCD2929"/>
        </Canvas>





        <ComboBox ItemsSource="{Binding NamePrinters}" SelectedItem="{Binding NameSelectPrinter}" HorizontalAlignment="Left" Margin="30,19,0,0" VerticalAlignment="Top" Width="220"/>
        <Grid DataContext="{Binding SelectPrinter}" HorizontalAlignment="Left" Height="173" Margin="8,16,0,0" VerticalAlignment="Top" Width="268">
            <ComboBox ItemsSource="{Binding PageMediaSizes}" SelectedItem="{Binding PageMediaSize}" HorizontalAlignment="Left" Margin="21,29,0,0" VerticalAlignment="Top" Width="220" />
            <ComboBox ItemsSource="{Binding PageOrientations}" SelectedItem="{Binding PageOrientation}" HorizontalAlignment="Left" Margin="21,56,0,0" VerticalAlignment="Top" Width="220"/>
            <ComboBox ItemsSource="{Binding OutputColors}" SelectedItem="{Binding OutputColor}" HorizontalAlignment="Left" Margin="21,84,0,0" VerticalAlignment="Top" Width="220"/>
            <ComboBox ItemsSource="{Binding InputBins}" SelectedItem="{Binding InputBin}" HorizontalAlignment="Left" Margin="21,111,0,0" VerticalAlignment="Top" Width="220"/>
            <TextBox Text="{Binding CopyCount, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="22" Margin="93,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Background="White"/>
            <Label Content="Count copy" HorizontalAlignment="Left" Margin="19,139,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid DataContext="{Binding Page}" HorizontalAlignment="Left" Height="134" Margin="18,183,0,0" VerticalAlignment="Top" Width="238">
            <TextBox Text="{Binding Left}" HorizontalAlignment="Left" Height="22" Margin="85,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Background="White"/>
            <Label Content="Left" HorizontalAlignment="Left" Margin="11,5,0,0" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Top}" HorizontalAlignment="Left" Height="22" Margin="85,39,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" Background="White"/>
            <Label Content="Top" HorizontalAlignment="Left" Margin="11,37,0,0" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Right}" HorizontalAlignment="Left" Height="22" Margin="85,69,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" Background="White"/>
            <Label Content="Right" HorizontalAlignment="Left" Margin="11,67,0,0" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Bottom}" HorizontalAlignment="Left" Height="22" Margin="85,103,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" Background="White"/>
            <Label Content="Bottom" HorizontalAlignment="Left" Margin="11,101,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Button Command="{Binding Print}" Content="Print" HorizontalAlignment="Left" Margin="28,344,0,0" VerticalAlignment="Top" Width="74" Height="26"/>
        <Button Command="{Binding PrintDialog}" Content="Button" HorizontalAlignment="Left" Margin="29,373,0,0" VerticalAlignment="Top" Width="74" Height="26"/>
    </Grid>
</Window>
